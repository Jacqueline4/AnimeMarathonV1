@page
@model AnimeMarathon.Web.Pages.LoginModel

@{
    ViewData["Title"] = "Iniciar sesión";
}
<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="login-form">
        <h1 class="text-center">Iniciar sesión</h1>

        <form id="loginForm" method="post" asp-page-handler="Login">
            <div class="form-group">
                <label for="username">Nombre de usuario:</label>
                <input type="text" id="username" name="username" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="password">Contraseña:</label>
                <input type="password" id="password" name="password" class="form-control" required>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Iniciar sesión</button>
            <div id="errorMessage" class="text-danger mt-3">
                @if (ViewData.ModelState.ContainsKey(string.Empty))
                {
                    <p>@ViewData.ModelState[string.Empty].Errors.FirstOrDefault()?.ErrorMessage</p>
                }
            </div>
        </form>

        <div class="mt-3 text-center">
            <p>¿Olvidaste tu contraseña? <a href="#">Haz clic aquí</a>.</p>
            <p>¿No tienes una cuenta? <a href="/Register">Regístrate aquí</a>.</p>
        </div>
    </div>
</div>

<style>
    .login-form {
        width: 100%;
        max-width: 400px;
        padding: 15px;
        margin: auto;
    }
</style>
