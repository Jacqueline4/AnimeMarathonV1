@page
@model AnimeMarathon.Web.Pages.LoginModel


@{
    ViewData["Title"] = "Iniciar sesión";
    
}

<h1>Iniciar sesión</h1>

<form id="loginForm" method="post" asp-page-handler="Login">
    <div>
        <label for="username">Nombre de usuario:</label>
        <input type="text" id="username" name="username" required>
    </div>
    <div>
        <label for="password">Contraseña:</label>
        <input type="password" id="password" name="password" required>
    </div>
    <button type="submit">Iniciar sesión</button>
    <div id="errorMessage" style="color: red;">
        @if (ViewData.ModelState.ContainsKey(string.Empty))
        {
            <p>@ViewData.ModelState[string.Empty].Errors.FirstOrDefault()?.ErrorMessage</p>
        }

    </div>
</form>
<div>
    <p>¿Olvidaste tu contraseña? <a href="#">Haz clic aquí</a>.</p>
    <p>¿No tienes una cuenta? <a href="/Register">Regístrate aquí</a>.</p>
</div>
